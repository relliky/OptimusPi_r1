

#ifndef SPICOMMANDS_H_
#define SPICOMMANDS_H_


// Commands from RaspberryPi to Overseer
#define READ_ACK							0x55
#define DUMMY_BYTE							0x00

#define OVERSEER_CONFIG_MOTOR_CH0_BLDC			0x01
#define OVERSEER_CONFIG_MOTOR_CH0_STEPPER		0x02
#define OVERSEER_CONFIG_MOTOR_CH0_BRUSHED		0x03
#define OVERSEER_CONFIG_MOTOR_CH1_BLDC			0x04
#define OVERSEER_CONFIG_MOTOR_CH1_STEPPER		0x05
#define OVERSEER_CONFIG_MOTOR_CH1_BRUSHED		0x06
#define OVERSEER_CONFIG_MOTOR_CH2_BLDC			0x07
#define OVERSEER_CONFIG_MOTOR_CH2_STEPPER		0x08
#define OVERSEER_CONFIG_MOTOR_CH2_BRUSHED		0x09
#define OVERSEER_CONFIG_MOTOR_CH3_BLDC			0x0a
#define OVERSEER_CONFIG_MOTOR_CH3_STEPPER		0x0b
#define OVERSEER_CONFIG_MOTOR_CH3_BRUSHED		0x0c
#define OVERSEER_START_MOTOR_0					0x0d
#define OVERSEER_START_MOTOR_1					0x0e
#define OVERSEER_START_MOTOR_2					0x0f
#define OVERSEER_START_MOTOR_3					0x10
#define OVERSEER_STOP_MOTOR_0					0x11
#define OVERSEER_STOP_MOTOR_1					0x12
#define OVERSEER_STOP_MOTOR_2					0x13
#define OVERSEER_STOP_MOTOR_3					0x14
#define OVERSEER_SET_MOTOR_PWM_0 				0x15
#define OVERSEER_SET_MOTOR_PWM_1 				0x16
#define OVERSEER_SET_MOTOR_PWM_2 				0x17
#define OVERSEER_SET_MOTOR_PWM_3 				0x18
#define OVERSEER_GET_MOTOR_STATUS_0				0x19
#define OVERSEER_GET_MOTOR_STATUS_1				0x1a
#define OVERSEER_GET_MOTOR_STATUS_2				0x1b
#define OVERSEER_GET_MOTOR_STATUS_3				0x1c
#define OVERSEER_CONFIG_IC0_INPUT_CAPTURE		0x1d
#define OVERSEER_CONFIG_IC0_GPIO_OUTPUT			0x1e
#define OVERSEER_CONFIG_IC0_GPIO_INPUT			0x1f
#define OVERSEER_CONFIG_IC1_INPUT_CAPTURE		0x20
#define OVERSEER_CONFIG_IC1_GPIO_OUTPUT			0x21
#define OVERSEER_CONFIG_IC1_GPIO_INPUT			0x22
#define OVERSEER_CONFIG_IC2_INPUT_CAPTURE		0x23
#define OVERSEER_CONFIG_IC2_GPIO_OUTPUT			0x24
#define OVERSEER_CONFIG_IC2_GPIO_INPUT			0x25
#define OVERSEER_CONFIG_IC3_INPUT_CAPTURE		0x26
#define OVERSEER_CONFIG_IC3_GPIO_OUTPUT			0x27
#define OVERSEER_CONFIG_IC3_GPIO_INPUT			0x28
#define OVERSEER_CONFIG_IC4_INPUT_CAPTURE		0x29
#define OVERSEER_CONFIG_IC4_GPIO_OUTPUT			0x2a
#define OVERSEER_CONFIG_IC4_GPIO_INPUT			0x2b
#define OVERSEER_CONFIG_IC5_INPUT_CAPTURE		0x2c
#define OVERSEER_CONFIG_IC5_GPIO_OUTPUT			0x2d
#define OVERSEER_CONFIG_IC5_GPIO_INPUT			0x2e
#define OVERSEER_CONFIG_IC6_INPUT_CAPTURE		0x2f
#define OVERSEER_CONFIG_IC6_GPIO_OUTPUT			0x30
#define OVERSEER_CONFIG_IC6_GPIO_INPUT			0x31
#define OVERSEER_CONFIG_IC7_INPUT_CAPTURE		0x32
#define OVERSEER_CONFIG_IC7_GPIO_OUTPUT			0x33
#define OVERSEER_CONFIG_IC7_GPIO_INPUT			0x34
#define OVERSEER_CONFIG_AN0_ANALOG_INPUT		0x35
#define OVERSEER_CONFIG_AN0_GPIO_OUTPUT			0x36
#define OVERSEER_CONFIG_AN0_GPIO_INPUT			0x37
#define OVERSEER_CONFIG_AN1_ANALOG_INPUT		0x38
#define OVERSEER_CONFIG_AN1_GPIO_OUTPUT			0x39
#define OVERSEER_CONFIG_AN1_GPIO_INPUT			0x3a
#define OVERSEER_CONFIG_AN2_ANALOG_INPUT		0x3b
#define OVERSEER_CONFIG_AN2_GPIO_OUTPUT			0x3c
#define OVERSEER_CONFIG_AN2_GPIO_INPUT			0x3d
#define OVERSEER_CONFIG_AN3_ANALOG_INPUT		0x3e
#define OVERSEER_CONFIG_AN3_GPIO_OUTPUT			0x3f
#define OVERSEER_CONFIG_AN3_GPIO_INPUT			0x40
#define OVERSEER_CONFIG_AN4_ANALOG_INPUT		0x41
#define OVERSEER_CONFIG_AN4_GPIO_OUTPUT			0x42
#define OVERSEER_CONFIG_AN4_GPIO_INPUT			0x43
#define OVERSEER_CONFIG_AN5_ANALOG_INPUT		0x44
#define OVERSEER_CONFIG_AN5_GPIO_OUTPUT			0x45
#define OVERSEER_CONFIG_AN5_GPIO_INPUT			0x46
#define OVERSEER_GET_IC0_WIDTH					0x47
#define OVERSEER_GET_IC1_WIDTH					0x48
#define OVERSEER_GET_IC2_WIDTH					0x49
#define OVERSEER_GET_IC3_WIDTH					0x4a
#define OVERSEER_GET_IC4_WIDTH					0x4b
#define OVERSEER_GET_IC5_WIDTH					0x4c
#define OVERSEER_GET_IC6_WIDTH					0x4d
#define OVERSEER_GET_IC7_WIDTH					0x4e
#define OVERSEER_GET_IC0_GPIO_INPUT_STATUS		0x4f
#define OVERSEER_GET_IC1_GPIO_INPUT_STATUS		0x50
#define OVERSEER_GET_IC2_GPIO_INPUT_STATUS		0x51
#define OVERSEER_GET_IC3_GPIO_INPUT_STATUS		0x52
#define OVERSEER_GET_IC4_GPIO_INPUT_STATUS		0x53
#define OVERSEER_GET_IC5_GPIO_INPUT_STATUS		0x54
#define OVERSEER_GET_IC6_GPIO_INPUT_STATUS		0x55
#define OVERSEER_GET_IC7_GPIO_INPUT_STATUS		0x56
#define OVERSEER_GET_AN0_GPIO_INPUT_STATUS		0x57
#define OVERSEER_GET_AN1_GPIO_INPUT_STATUS		0x58
#define OVERSEER_GET_AN2_GPIO_INPUT_STATUS		0x59
#define OVERSEER_GET_AN3_GPIO_INPUT_STATUS		0x5a
#define OVERSEER_GET_AN4_GPIO_INPUT_STATUS		0x5b
#define OVERSEER_GET_AN5_GPIO_INPUT_STATUS		0x5c
#define OVERSEER_SET_IC0_GPIO_OUTPUT_STATUS		0x5d
#define OVERSEER_SET_IC1_GPIO_OUTPUT_STATUS		0x5e
#define OVERSEER_SET_IC2_GPIO_OUTPUT_STATUS		0x5f
#define OVERSEER_SET_IC3_GPIO_OUTPUT_STATUS		0x60
#define OVERSEER_SET_IC4_GPIO_OUTPUT_STATUS		0x61
#define OVERSEER_SET_IC5_GPIO_OUTPUT_STATUS		0x62
#define OVERSEER_SET_IC6_GPIO_OUTPUT_STATUS		0x63
#define OVERSEER_SET_IC7_GPIO_OUTPUT_STATUS		0x64
#define OVERSEER_SET_AN0_GPIO_OUTPUT_STATUS		0x65
#define OVERSEER_SET_AN1_GPIO_OUTPUT_STATUS		0x66
#define OVERSEER_SET_AN2_GPIO_OUTPUT_STATUS		0x67
#define OVERSEER_SET_AN3_GPIO_OUTPUT_STATUS		0x68
#define OVERSEER_SET_AN4_GPIO_OUTPUT_STATUS		0x69
#define OVERSEER_SET_AN5_GPIO_OUTPUT_STATUS		0x6a
#define OVERSEER_GET_AN0_ANALOG_VALUE			0x6b
#define OVERSEER_GET_AN1_ANALOG_VALUE			0x6c
#define OVERSEER_GET_AN2_ANALOG_VALUE			0x6d
#define OVERSEER_GET_AN3_ANALOG_VALUE			0x6e
#define OVERSEER_GET_AN4_ANALOG_VALUE			0x6f
#define OVERSEER_GET_AN5_ANALOG_VALUE			0x70

//added

//added two SPI commands to arbitrat whether the system is running standalone by RF remote control or as a slave of pi.
#define OVERSEER_CONFIG_AS_STANDALONE_COPTER      0xFF
#define OVERSEER_CONFIG_AS_PI_CONTROLLED_COPTER   0xFE



// Commands from Overseer to BLDC controllers
#define MOTOR_CONTROLLER_CONFIG_CH0_BLDC 		0x01
#define MOTOR_CONTROLLER_CONFIG_CH0_STEPPER 	0x02
#define MOTOR_CONTROLLER_CONFIG_CH0_BRUSHED 	0x03
#define MOTOR_CONTROLLER_CONFIG_CH1_BLDC 		0x04
#define MOTOR_CONTROLLER_CONFIG_CH1_STEPPER 	0x05
#define MOTOR_CONTROLLER_CONFIG_CH1_BRUSHED 	0x06
#define MOTOR_CONTROLLER_BLDC_START_MOTOR_0		0x07
#define MOTOR_CONTROLLER_BLDC_START_MOTOR_1		0x08
#define MOTOR_CONTROLLER_BLDC_SET_MOTOR_0_DUTY	0x09
#define MOTOR_CONTROLLER_BLDC_SET_MOTOR_1_DUTY	0x0a
#define MOTOR_CONTROLLER_BLDC_STOP_MOTOR_0		0x0b
#define MOTOR_CONTROLLER_BLDC_STOP_MOTOR_1		0x0c
#define MOTOR_CONTROLLER_BLDC_GET_STATUS_0		0x0d
#define MOTOR_CONTROLLER_BLDC_GET_STATUS_1		0x0e


#endif /* SPICOMMANDS_H_ */
