#ifndef IOHANDLER_H_
#define IOHANDLER_H_

#include <stdio.h>
#include <math.h>

static void SendStr(const char*){};

class _mystd
{

	class endl {int a};
uint32_t
	class _op
	{
		class _op& operator<< (const char* str)
		{
			SendString(str);
			return *this;
		}
		class _op& operator<< (const double dbl)
		{
			char buf[20];

			SendStr(buf);
			return *this;
		}
		class _op& operator<< (const float flt)
		{
			return this << (double) flt;
		}
		class _op& operator<< (const long int i);

		class _op& operator<< (const class _endl)
		{
			SendStr("\n");
			return *this;
		}

	} cerr, cout;


} mystd;


#define std mystd

#endif /* IOHANDLER_H_ */
